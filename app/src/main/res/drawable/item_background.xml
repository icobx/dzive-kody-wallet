<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/colorItemShadow" />
            <corners android:radius="@dimen/item_corner_radius" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorItemBackground" />
            <corners android:radius="@dimen/item_corner_radius" />
            <padding
                android:top="@dimen/item_padding"
                android:right="@dimen/item_padding"
                android:bottom="@dimen/item_padding"
                android:left="@dimen/item_padding" />
        </shape>
    </item>

</layer-list>
