<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/balance_fragment"
        android:background="@android:color/holo_orange_light"
        tools:context=".ui.fragment.SendReceiveFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/send_fragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/send_receive_divider"
            android:background="@android:color/holo_orange_light"
            tools:context=".ui.fragment.SendReceiveFragment"
            android:layout_marginVertical="20dp">

            <TextView
                android:id="@+id/send_headline_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/send_payment"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="10dp"
            />

            <EditText
                android:id="@+id/send_rec_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Receiver public key"
                android:text=""
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/send_receive_contact_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

            <ImageButton
                android:id="@+id/send_receive_contact_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_account_circle_48"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@null"
                android:layout_marginRight="10dp"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/send_receive_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintTop_toBottomOf="@id/send_fragment"
            app:layout_constraintBottom_toTopOf="@id/receive_fragment"
            android:background="@android:color/background_dark" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/send_receive_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/receive_fragment"
            android:background="@android:color/holo_orange_light"
            tools:context=".ui.fragment.SendReceiveFragment"
            android:layout_marginVertical="20dp" >

            <TextView
                android:id="@+id/receive_headline_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/receive_payment"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/qr_code"
                android:layout_marginBottom="10dp"
            />

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:layout_constraintTop_toBottomOf="@id/receive_headline_text_view"
                app:layout_constraintBottom_toBottomOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>