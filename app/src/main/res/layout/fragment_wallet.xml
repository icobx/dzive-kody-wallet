<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="toolbar_text"
            type="String" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/wallet_fragment"
        tools:context=".WalletFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/wallet_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            app:title="@{toolbar_text}"/>
<!--            android="@{toolbar_text}" />-->

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/wallet_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/wallet_toolbar"
            android:layout_above="@+id/wallet_bottom_nav"
            app:navGraph="@navigation/wallet_nav_graph"
            tools:layout="@layout/fragment_balance" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/wallet_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:menu="@menu/wallet_menu" />


    </RelativeLayout>
</layout>